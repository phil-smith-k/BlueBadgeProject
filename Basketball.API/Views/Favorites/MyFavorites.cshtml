@model IEnumerable<Basketball.Models.TeamList>

@{
    ViewBag.Title = "MyFavorites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="jumbotron">
        <h1 class="display-4">Git "R" Dun League!</h1>
        <hr class="my-4">
        <p>2020 SEASON</p>
        <b class="btn btn-primary btn-lg" href="#" role="button">@Html.ActionLink("ALL TEAMS", "Index", null, new { @style = "color: white;" })</b>
        <b class="btn btn-primary btn-lg" href="#" role="button">@Html.ActionLink("WEST CONFERENCE", "EastConference", new { id = 8 }, new { @style = "color: white;" })</b>
        <b class="btn btn-primary btn-lg" href="#" role="button">@Html.ActionLink("EAST CONFERENCE", "EastConference", new { id = 7 }, new { @style = "color: white;" })</b>
        <b class="btn btn-primary btn-lg" href="#" role="button">@Html.ActionLink("MY FAVORITES", "Index","Favorites", null, new { @style = "color: white;" })</b>
    </div>
    <h2>Favorite Teams</h2>
    <table class="table">
        <tr>
            <th>
                Team Name
            </th>
            <th>
                Location
            </th>
            <th>
                Record
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Record)
                </td>
            </tr>
        }
    </table>
    <h2>Favorite Players</h2>
    <table class="table">
        <tr>
            <th>
                Player Name
            </th>
            <th>
                Team
            </th>
            <th>
                Average Points
            </th>
            <th>
                Average Rebounds
            </th>
            <th>
                Average Assists
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Record)
                </td>
            </tr>
        }
    </table>
</body>
</html>